@model List<Auto> 
@{
  ViewData["Title"] = "Auto"; 
}

<table class="table"> 
    <tr>
        <th>Model</th>
        <th>Year</th>
        <th>Price</th>
    </tr>
  @foreach (var item in Model)
  {
          <tr>
              <td>
        @Html.DisplayFor(modelItem => item.AutoModel)
              </td>
              <td>
        @Html.DisplayFor(modelItem => item.Year)
              </td>
              <td>
        @Html.DisplayFor(modelItem => item.Price)
              </td>
              <td>
        @Html.ActionLink("Delete", "DeleteAuto", new { id = item.AutoId , name = ViewData["Title"]})
              </td>

          </tr>
  } 
 </table>

<br />

<p>
  @Html.ActionLink("Add Auto", "AddAuto")
</p>


